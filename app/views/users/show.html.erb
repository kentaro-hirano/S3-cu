<div class= "container">
    <div class= "row">
        <div class= "col-md-3">
            <%= render 'layouts/userinfo', user: @user %>
            <%= render 'travels/newform', travel: @travel %>
        </div>
        <div class= "col-md-8 offset-md-1">
            <h2 class= "mb-3">Travel detail</h2>
            <table class= "table table-hover">
                <thead>
                    <tr>
                        <td></td>
                        <td>Title</td>
                        <td>Opinion</td>
                    </tr>
                </thead>
                <tbody>
                <% @user.travels.each do |travel| %>
                    <tr>
                        <td>
                            <%= link_to user_path(travel.user) do %>
                                <%= attachment_image_tag travel.user, :profile_image, size: '40x40', fallback: "no-img.jpg" %>
                            <% end %>
                        </td>
                        <td><%= link_to travel.title, travel_path(travel) %></td>
                        <td><%= travel.body %></td>
                    </tr>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>


