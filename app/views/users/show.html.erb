<%= render 'layouts/finder' %>
<div class= "container">
    <div class= "row">
        <div class= "col-md-3">
            <%= render 'layouts/userinfo', user: @user %>
            <%= render 'books/newform', book: @book %>
        </div>
        <div class= "col-md-8 offset-md-1">
            <div class= "container">
                <div class= "row">
                    <div class= "col-md-8">
                        <h2 class= "mb-3">books</h2>
                    </div>
                    <div class= "col-md-4 h-25 mt-2">
                        <% if @user == current_user && @user.books.exists? %>
                            <%= link_to "すべて削除",  destroy_all_books_path, method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger btn-sm" %>
                        <% end %>
                    </div>
                </div>
            </div>
            <table class= "table table-hover">
                <thead>
                    <tr>
                        <th style="width: 100px"></th>
                        <th style="width: 100px">名称</th>
                        <th style="width: 380px">概要</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                <% @user_books.each do |book| %>
                    <tr>
                        <td>
                            <%= link_to book_path(book) do %>
                                <%= attachment_image_tag book, :image, size: '100x100', fallback: "no-img.jpg" %>
                            <% end %>
                        </td class= "pt-5">
                        <td class= "pt-5"><%= link_to book.title, book_path(book) %></td>
                        <td class= "pt-5"><%= book.body %></td>
                        <td class= pt-5><%= link_to "詳細", book_path(book), class: "btn btn-success btn-sm" %></td>
                    </tr>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>


