<% if book.errors.any? %>
  <div class="alert alert-danger mb-0 mt-2">
    <ul class= "mb-0">
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h3 class= "mt-4">New Book</h3>
<%= form_with model: book, local: true do |f| %>
  <div class= "form-group mb-3">
    <%= f.label :画像 %><br>
    <%= f.attachment_field :image %>
  </div>
  <div class= "form-group mb-0">
    <%= f.label :名称 %><br>
    <%= f.text_field :title, class: "form-control" %><br>
  </div>
  <div class= "form-group mb-0">
    <%= f.label :概要 %><br>
    <%= f.text_field :body, class: "form-control" %><br>
  </div>
  <div class= "form-group mb-0">
    <%= f.label :カテゴリー %><br>
    <%= f.text_field :category, class: "form-control" %><br>
  </div>
  <div class= "form-group mb-0" id="evaluate_stars">
    <%= f.label :評価 %><br>
  </div>
  <div class= "form-group">
    <%= f.submit "新規投稿", class: "btn btn-success mt-4" %>
  </div>
<% end %>
<script>
  $('#evaluate_stars').raty({
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    scoreName: 'book[evaluation]' //登録するモデル名とカラム名を記述
  });
</script>