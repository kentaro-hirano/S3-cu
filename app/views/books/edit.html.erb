<div class= "container">
  <div class= "row">
    <div class= "col-md-6 offset-md-3 mt-4">
      <h1 class= "">Edit Book</h1>
      <%= form_with model: @book, local: true do |f| %>
        <% if @book.errors.any? %>
          <div class="alert alert-danger mb-0 mt-2">
            <ul class= "mb-0">
              <% @travel.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class= "form-group mb-0">
            <%= f.label :タイトル, class: "text_center" %><br>
            <%= f.text_field :title, class: "form-control" %><br>
        </div>
        <div class= "form-group mb-0">
            <%= f.label :本文 %><br>
            <%= f.text_field :body, class: "form-control" %><br>
        </div>
        <label>評価</label>
        <p class="book-evaluation" data-score="<%= @book.evaluation %>"></p>
        <%= f.submit :"更新", class: "btn btn-primary mb-3" %>
      <% end %>
      <%= link_to "Show", book_path(@book) %> |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
<script>
  $('.book-evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>