<div class= "container">
  <div class= "row">
    <div class= "col-md-6 offset-md-3 mt-4">
      <h1 class= "text-center">Editing Group</h1>
      <%= form_with model: @group do |f| %>
        <div class= "form-group mb-0">
            <%= f.label :グループ名 %><br>
            <%= f.text_field :name, class: "form-control" %><br>
        </div>
        <div class= "form-group mb-0">
          <%= f.label :紹介文 %><br>
          <%= f.text_field :introduction, class: "form-control" %><br>
        </div>
        <div class= "form-group mb-0">
            <%= f.label :グループ画像 %><br>
            <%= f.attachment_field :image %>
        </div>
        <%= f.submit :"Update Group", class: "btn btn-success mt-4" %>
      <% end %>
    </div>
  </div>
</div>
