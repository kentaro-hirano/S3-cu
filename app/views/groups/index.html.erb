<%= render 'layouts/finder' %>
<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <%= render 'layouts/userinfo', user: current_user %> 
      <%= render 'books/newform', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="mb-3">Groups</h2>
      <table class="table">
        <tr>
          <th></th>
          <th>グループ名</th>
          <th>紹介文</th>
          <th></th>
        </tr>
        <% @groups.each do |group| %>
        <tr>
          <td><%= attachment_image_tag group, :image, size: '45x45', fallback: "no-img.jpg", class: "img" %></td>
          <td><%= group.name %></td>
          <td><%= group.introduction %></td>
          <% if group.owner_id == current_user.id %>
            <td><%= link_to "編集", edit_group_path(group), class: "btn btn-primary btn-sm" %></td>
          <% end %>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>