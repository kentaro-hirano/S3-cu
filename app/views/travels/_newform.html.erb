<% if travel.errors.any? %>
  <div class="alert alert-danger mb-0 mt-2">
    <ul class= "mb-0">
      <% travel.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h3 class= "mt-4">New Travel</h3>
<%= form_with model: travel, local: true do |f| %>
  <div class= "form-group mb-3">
    <%= f.label :画像 %><br>
    <%= f.attachment_field :image %>
  </div>
  <div class= "form-group mb-0">
    <%= f.label :名称 %><br>
    <%= f.text_field :title, class: "form-control" %><br>
  </div>
  <div class= "form-group mb-0">
    <%= f.label :概要 %><br>
    <%= f.text_field :body, class: "form-control" %><br>
  </div>
  <div class= "form-group">
    <%= button_tag :type => "submit", :class =>"btn btn-success btn-s-md" do %>
        <i class="fas fa-plus-circle mr-1"></i>新規投稿
    <% end %>
  </div>
<% end %>