<div class= "container">
    <div class= "row mt">
        <div class= "col-md-3">
            <%= render 'layouts/userinfo', user: @travel.user %>
            <%= render 'travels/newform', travel: @travel_new %>
        </div>
        <div class= "col-md-8 offset-md-1">
            <h2 class= "mb-3">Travel detail</h2>
            <table class= "table table-hover">
                <thead>
                    <tr>
                        <td></td>
                        <td>Title</td>
                        <td>Opinion</td>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                <% @travel.user.travels.each do |travel| %>
                    <tr>
                        <td>
                            <%= link_to user_path(travel.user) do %>
                                <%= attachment_image_tag travel.user, :profile_image, size: '40x40', fallback: "no-img.jpg" %><br>
                                <%= travel.user.name %>
                            <% end %>
                        </td>
                        <td><%= link_to travel.title, user_path(travel.user) %></td>
                        <td><%= travel.body %></td>
                        <% if travel.user == current_user %>
                          <td>
                            <%= link_to edit_travel_path(travel), class: "btn btn-success btn-sm w-75" do %>
                                <i class="fas fa-edit"></i>
                            <% end %>
                          </td>
                          <td>
                            <%= link_to travel_path(travel), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger btn-sm w-75" do %>
                              <i class="far fa-trash-alt"></i>
                            <% end %>
                          </td>
                        <% end %>
                    </tr>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>





