<div class= "container">
    <div class= "row">
        <div class= "col-md-6 offset-md-3">
            <h1 class= "text-center">Edit Travel</h1>
            <%= form @travel do |f| %>
            <% if @travel.errors.any? %>
              <div class="alert alert-danger mb-0 mt-2">
                <ul class= "mb-0">
                  <% @travel.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class= "form-group mb-0">
                <%= f.label :タイトル, class: "text_center" %><br>
                <%= f.text_field :title, class: "form-control" %><br>
            </div>
            <div class= "form-group">
                <%= f.label :本文 %><br>
                <%= f.text_field :body, class: "form-control" %><br>
            </div>
                <%= f.submit :"更新", class: "btn btn-primary mb-3" %>
            <% end %>
            <%= link_to "Show", travel_path(@travel) %> |
            <%= link_to "Back", travels_path %>
        </div>
    </div>
</div>
