<div class= "container">
  <div class= "row">
    <div class= "col-md-6">
      <div class= "form-group form-inline mt-2">
        <%= form_with url: finder_path, method: :get, local: :true do |f| %>
          <%= f.select :range, options_for_select([['User'], ['Travel']]), {}, class: "form-control" %>
          <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]), {}, class: "form-control" %>
          <%= f.text_field :word, class: "form-control" %>
          <%= f.submit "検索", class: "btn btn-info" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class= "form-group form-inline mt-2">
        <%= form_with url: books_path, method: :get, local: :true do |f| %>  
          <%= f.text_field :category, class: "form-control", placeholder: "カテゴリー検索" %>
          <%= f.submit "検索", class: "btn btn-info" %>
        <% end %>
      </div>
    </div>
  </div>
</div>